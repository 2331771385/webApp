.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}

.moreInput {
  border: 1rpx solid gray;
  width: 84%;
  height: 200rpx;
  margin-left: 8%;
  margin-top: 20rpx;
  font-size: 0.8rem;
}
textarea::-webkit-input-placeholder {
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.wx-popup-btn {
  width: 50%;
  float: right;
  height: 100rpx;
  margin-right: 40rpx;
}
.btn-no, .btn-ok {
  margin-top: 20rpx;
  border: 1px solid gray;
  width: 45% !important;
  height: 60rpx;
  padding: 0 !important;
  font-size: 1rem;
  text-align: center;
  float: left;
}
.btn-no {
  margin-right: 10rpx !important;
}
.btn-ok {
  float: right;
  background-color: blue;
}
.btn-text-ok {
  color: #fff;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8rem;
}
.btn-text-no {
  color: gray;
  line-height: 60rpx;
  text-align: center;
  font-size: 0.8rem;
}