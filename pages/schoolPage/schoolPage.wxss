.schoolContainer {
    height: 100vh;
    width: 100vw;
}
.header {
    height: 6%;
    width: 100%;
    /* background-color: #9b0d14; */
}
.backIcon {
    width: 32rpx;
    height: 32rpx;
    float: left;
    margin-left: 10rpx;
    margin-top: 15rpx;
}
.backImg {
    width: 32rpx;
    height: 32rpx;
}
.header-title {
    color: #000;
    line-height: 70rpx;
    font-size: 18px;
    text-align: center;
}
.picBox {
    height: 94%;
    width: 100%;
}
.imgBox {
    height: 100%;
    width: 100%;
}
.startBtn {
    left: 50%;
    transform: translateX(-50%);
    position: absolute;
    bottom: 50rpx;
}
.scaleBtn {
    width: 120px;
    height: 45px;
    background-color: #cd3737;
    border-radius: 45px;
    font-size: 16px;
    animation: switch 1.5s ease-out infinite;
}
@keyframes switch {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(0.8);
    }
}
.textBtn {
    color: #fff;
    font-size: 1.2rem;
}