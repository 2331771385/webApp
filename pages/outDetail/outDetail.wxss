}
.input-panel {
    display: flex;
    background: #dddddd;
    height: 80px;
    position: fixed;
    width:100%;
    padding:0px 10px;
    align-items: center;
    box-sizing: border-box;
}

.input-panel input {
    flex: 1;
    width: 100%;
    background: #ffffff;
    height: 40px;
    line-height: 40px;
    box-sizing: border-box;
    padding:0px 5px;
    border-radius: 3px;
}

.send-btn {
    display: inline-block;
    padding: 0px 10px;
    color: #fff;
    background: green;
    border-radius: 3px;
    line-height: 40px;
    margin-left: 5px;
}
.notTalk {
