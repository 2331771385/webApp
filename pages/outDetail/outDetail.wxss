    background-color: #9b0d14;
}
.backIcon {
    width: 32rpx;
    height: 32rpx;
    float: left;
    margin-left: 10rpx;
    margin-top: 15rpx;
}
.backImg {
    width: 32rpx;
    height: 32rpx;
}
.header-title {
    color: #fff;
    line-height: 70rpx;
    font-size: 18px;
    text-align: center;
}
.content {
