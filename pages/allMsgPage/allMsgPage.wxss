.header {
    height: 70rpx;
    width: 100%;
    background-color: #9b0d14;
}
.backIcon {
    width: 32rpx;
    height: 32rpx;
    float: left;
    margin-left: 10rpx;
    margin-top: 15rpx;
}
.backImg {
    width: 32rpx;
    height: 32rpx;
}
.header-title {
    color: #fff;
    line-height: 70rpx;
    font-size: 18px;
    text-align: center;
}
.msgListSty {
    max-height: 87%;
    margin-top: 10rpx;
}
.msg-img {
    height: 30%;
}
.msg-img-left {
    height: 50rpx;
    width: 50rpx;
    float: left;
    
}
.left-img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.msg-img-right {
    height: 30rpx;
    /* line-height: 60rpx; */
    margin-left: 60rpx;
    font-size: 0.8rem;
}
.msg-des {
    height: 45%;
    font-size: 0.8rem;
    text-align: left;
    margin-top: 10rpx;
    margin-left: 60rpx;
}
.msg-bottom {
    display: flex;
    margin-left: 60rpx;
}
.msg-timer {
    margin-right: 30rpx;
    height: 20%;
    font-size: 0.8rem;
    margin-top: 10rpx;
    max-width: 40%;
}
.msg-answer {
    margin-top: 10rpx;
    font-size: 0.8rem;
    color: gray;
}
.com-sItem{
    /* height: 47%; */
    margin-bottom: 30rpx;
}
.com-sItem:last-child{
    margin-bottom: 10rpx;
}
.msgListSty {
    /* max-height: 87%; */
    height: 800rpx;
    margin-top: 10rpx;
    overflow-y: scroll;
}
.content-saying {
    width: 90%;
    margin: auto;
    min-height: 200rpx;
    margin-top: 30rpx;
    box-shadow: 2px 2px 6px 3px #909090;
    padding: 0.5rem;
}

.message-list{
    position: fixed;
    width:100%;
}
.input-panel {
    display: flex;
    background: #dddddd;
    height: 80px;
    position: fixed;
    width:100%;
    padding:0px 10px;
    align-items: center;
    box-sizing: border-box;
}

.input-panel input {
    flex: 1;
    width: 100%;
    background: #ffffff;
    height: 40px;
    line-height: 40px;
    box-sizing: border-box;
    padding:0px 5px;
    border-radius: 3px;
}

.send-btn {
    display: inline-block;
    padding: 0px 10px;
    color: #fff;
    background: green;
    border-radius: 3px;
    line-height: 40px;
    margin-left: 5px;
}
.moreMsg {
    height: 30rpx;
    color: #707070;
    /* width: 10rpx;
    background-color: green; */
    margin-left: 60rpx;
    margin-top: 10rpx;
    font-size: 0.6rem;
}
.line {
    height: 20px;
    line-height: 20px;
    width: 20px;
    float: left;
    /* background-color: green; */
}
.line image {
    height: 100%;
    width: 100%;
}
.line-text {
    height: 20px;
    max-width: 120px;
    float: left;
    display: flex;
}
.line-text image {
    height: 100%;
    width: 20px;
    display: block;
}
.line-text text {
    font-size: 0.8rem;
    color: #707070;
}
.line-text .notRotate {
    line-height: 20px;
    display: block;

}
.line-text .rotate {
    line-height: 20px;
    display: block;
    transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
    -moz-transform: rotate(180deg);
    -o-transform: rotate(180deg);
}
.subChildren {
    min-height: 200rpx;
    margin-left: 60rpx;
    margin-top: 10rpx;
}
.notColleaps {
    height: 20px;
    margin-top: 10rpx;
}
