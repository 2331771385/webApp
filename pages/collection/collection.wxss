/* pages/collection/collection.wxss */
.header {
    height: 70rpx;
    width: 100%;
    background-color: #9b0d14;
}
.backIcon {
    width: 32rpx;
    height: 32rpx;
    float: left;
    margin-left: 10rpx;
    margin-top: 15rpx;
}
.backImg {
    width: 32rpx;
    height: 32rpx;
}
.header-title {
    color: #fff;
    line-height: 70rpx;
    font-size: 18px;
    text-align: center;
}
.collectionBox {
    height: 85vh;
    width: 92vw;
    margin-left: 4vw;
    margin-top: 10px;
    overflow-y: scroll;
    /* padding: 10px 20px; */
    /* background-color: antiquewhite; */
}
.opt-Items {
    width: 100%;
    height: 130px;
    /* background-color: aquamarine; */
    margin-bottom: 10px;
    border-radius: 5px;
    box-shadow: 2px 2px 10px #9090907d;
}
.items-left {
    float: left;
    width: 100px;
    height: 100px;
    margin-top: 15px;
    margin-left: 10px;
    background-color: bisque;
}
.items-right {
    float: left;
    margin-left: 10px;
    width: 65%;
    height: 100px;
    margin-top: 15px;
}
.items-right-title {
    height: 30px;
    font-size: 20px;
}
.items-right-distance {
    height: 30px;
    line-height: 30px;
    font-size: 18px;
}
.items-right-des {
    height: 40px;
    line-height: 40px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 18px;
}
.items-left-img {
    width: 100%;
    height: 100%;
}